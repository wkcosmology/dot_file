# Rsync
function sync_lib {
    echo "Sync begins:"
    echo "From: $1"
    echo "To: $2@$3:$4"
    rsync \
        --delete \
        --exclude-from="$1.gitignore" \
        --exclude=".git/*" \
        --info=name0 \
        -e "ssh -p$5" \
        -rz \
        $1 \
        $2@$3:$4
    echo "Sync Finished!"
    }
